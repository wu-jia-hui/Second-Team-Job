.container {
  padding: 20px;
}

.post {
  margin-bottom: 20px;
  background-color: #fff;
  padding: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.post-image {
  width: 100%;
  height: 200px;
  border-radius: 5px;
}

.post-title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

.post-description {
  color: #666;
  margin-top: 5px;
}

/* 返回按钮样式 */
.back-button {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 100%;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  z-index: 10;
}

/* 加号按钮样式 */
.add-image {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 100%;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  z-index: 10;
}
