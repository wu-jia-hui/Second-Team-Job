/* 页面基本样式 */
.container {
  padding: 20px;
}

.detail-image {
  width: 100%;
  height: 200px;
  border-radius: 5px;
}

.detail-info {
  margin-top: 15px;
}

.detail-title {
  font-size: 22px;
  font-weight: bold;
}

.detail-description {
  color: #666;
  margin-top: 5px;
}

.section-title {
  font-size: 18px;
  margin-top: 15px;
  margin-bottom: 5px;
  font-weight: bold;
}

.step {
  margin-top: 5px;
}

/* 收藏按钮 */
.collect-btn {
  background-color: #ff3b30;
  color: white;
  width: 100%;
  padding: 10px;
  margin-top: 20px;
  font-size: 18px;
  border-radius: 5px;
}

/* 评论部分 */
.comments {
  margin-top: 20px;
}

.comments-title {
  font-size: 20px;
  font-weight: bold;
}

.comment-item {
  margin-top: 10px;
  font-size: 16px;
}

.comment-user {
  font-weight: bold;
}

.more-comments-btn {
  background-color: #007aff;
  color: white;
  width: 100%;
  padding: 10px;
  margin-top: 20px;
  font-size: 18px;
  border-radius: 5px;
}
