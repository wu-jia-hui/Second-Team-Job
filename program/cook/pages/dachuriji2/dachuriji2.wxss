/* app.wxss */
.container {
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.date {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.prompt {
  margin-bottom: 20px;
}

.diary-input {
  width: 100%;
  height: 200px; /* 设置文本框的高度 */
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  margin-bottom: 20px;
}

.save-button {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}