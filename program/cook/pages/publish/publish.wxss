.publish-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.add-image {
  width: 100px;
  height: 100px;
  border: 1px dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30px;
  margin-bottom: 20px;
}

.cancel-button {
  width: 100px;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #f44336;
  color: #fff;
  border: none;
  border-radius: 5px;
}

.publish-button {
  width: 100px;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #ff9800;
  color: #fff;
  border: none;
  border-radius: 5px;
}
